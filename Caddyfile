# Frog Multiplayer Game - Caddy Configuration
# Replace YOUR_DOMAIN with your actual domain (e.g., frog.muazaoski.online)

YOUR_DOMAIN {
    # Reverse proxy to the game server
    reverse_proxy froggame:3000
    
    # WebSocket support (required for Socket.IO)
    @websockets {
        header Connection *Upgrade*
        header Upgrade websocket
    }
    reverse_proxy @websockets froggame:3000

    # Enable compression
    encode gzip zstd
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }
    
    # Logging
    log {
        output file /data/access.log
        format console
    }
}

# Optional: Redirect www to non-www
www.YOUR_DOMAIN {
    redir https://YOUR_DOMAIN{uri} permanent
}
